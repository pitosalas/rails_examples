<h1>Hirings</h1>

<table>
  <thead>
    <tr>
      <th>Student</th>
      <th>Course</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hirings.each do |hiring| %>
      <tr>
        <td><%= hiring.student_id %></td>
        <td><%= hiring.course_id %></td>
        <td><%= link_to 'Show', hiring %></td>
        <td><%= link_to 'Edit', edit_hiring_path(hiring) %></td>
        <td><%= link_to 'Destroy', hiring, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

